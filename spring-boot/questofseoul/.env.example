# Spring Profile
SPRING_PROFILES_ACTIVE=dev

# Server Configuration
SERVER_PORT=8080

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/questofseoul
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_POOL_SIZE=10
DB_POOL_MIN_IDLE=5

# JPA Configuration
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true

# OAuth2 Google Configuration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
FRONTEND_URL=http://localhost:5173

# JWT
JWT_SECRET=questofseoul-dev-secret-key-at-least-256-bits-for-hs256
JWT_ACCESS_TOKEN_EXPIRATION_MS=86400000
JWT_REFRESH_TOKEN_EXPIRATION_MS=1209600000
JWT_REFRESH_COOKIE_NAME=qos_refresh_token
JWT_REFRESH_COOKIE_PATH=/
JWT_REFRESH_COOKIE_SAME_SITE=Lax
JWT_REFRESH_COOKIE_SECURE=false
APP_AUTH_ADMIN_EMAILS=
APP_AUTH_ADMIN_USER_IDS=

# Swagger Configuration (Production)
SWAGGER_ENABLED=false

# AI Server
AI_SERVER_URL=http://localhost:8000
AI_SERVER_ENABLED=true

# OpenAI (RAG 지식 동기화용 - POST /admin/rag/sync 시 임베딩 생성)
# OPENAI_API_KEY=sk-...

# AWS S3
AWS_S3_ENABLED=true
AWS_S3_BUCKET=your-bucket-name
AWS_REGION=ap-northeast-2
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
